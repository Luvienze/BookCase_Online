<resources xmlns:tools="http://schemas.android.com/tools">
    <!--  Base application theme.  -->
    <style name="Theme.DenemeApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!--  Primary brand color.  -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!--  Secondary brand color.  -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--  Status bar color.  -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!--  Customize your theme here.  -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextInputStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextInputHintAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="CustomTextInputStyle" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AddBookButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="Button">
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="TextColorGray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextColorSearchBar">
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="background">@color/darkWhite</item>
    </style>

    <style name="ProfileButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="iconGravity">start</item>
        <item name="iconTint">@null</item>
        <item name="iconSize">50dp</item>

    </style>
    <style name="SearchIcon">
        <item name="tint">@color/white</item>
    </style>

    <style name="TextColorBlack" parent="TextAppearance.Material3.SearchView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="adminLblColor">
        <item name="drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/darkWhite</item>
    </style>

    <style name="categoryView">
        <item name="android:textColor">@color/white</item>
        <item name="color">@color/lacivert</item>
    </style>

    <!-- CARD VIEW-->
    <style name="cardView">
        <item name="backgroundColor">@color/black</item>
        <item name="boxStrokeColor">@color/white</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="textView">
        <item name="drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="signUpTextView">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="footer">
        <item name="android:textColor">@color/darkWhite</item>
    </style>

    <style name="editIcon">
        <item name="tint">@color/white</item>
    </style>

    <!-- ADMIN SAYFALARI-->
    <style name="SearchViewStyle" parent="Widget.Material3.SearchBar">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@color/gray</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="MenuButton" >
        <item name="iconTint">@color/white</item>
    </style>

    <style name="NavigationView" >
        <item name="itemIconTint">@color/white</item>
    </style>

    <style name="BookAddImage" >
        <item name="tint">@color/white</item>
    </style>

    <style name="DarkTextInputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#888888</item>
        <item name="boxBackgroundColor">#2C2C2C</item>
        <item name="hintTextColor">#CCCCCC</item>
        <item name="android:textColorHint">#CCCCCC</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="helperTextTextColor">#AAAAAA</item>
        <item name="errorTextColor">#FF6F61</item>
    </style>

    <style name="Kategori_Spinner" >
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonPositive</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonNegative</item>
    </style>

    <style name="AlertDialogButtonPositive" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AlertDialogButtonNegative" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Normal_button" >
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NormalText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Tema_tint">
        <item name="drawableTint">@color/white</item>
    </style>
</resources>