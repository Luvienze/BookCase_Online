<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DenemeApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/acik_mavi</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SubmitButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/materialGreen</item>
        <item name="iconTint">@android:color/white</item>
        <item name="icon">@drawable/check</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="TextInputEditText" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="AddBookButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="LoginButton" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="RemoveButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/red</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="ProfileButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="iconGravity">start</item>
        <item name="iconTint">@null</item>
        <item name="iconSize">50dp</item>

    </style>

    <style name="TextInputStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextInputHintAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="CustomTextInputStyle" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button">
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="TextColorGray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextColorSearchBar">
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="SearchIcon">
        <item name="tint">@color/black</item>
    </style>

    <style name="adminLblColor">
        <item name="drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- CARD VIEW-->
    <style name="cardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="textView">
        <item name="drawableTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="signUpTextView">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="footer">
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- ADMIN SAYFALARI-->

    <style name="NavigationView" >
        <item name="itemIconTint">@color/gray</item>
    </style>
    <style name="BookAddImage" >
        <item name="tint">@color/gray</item>
    </style>

    <style name="Kategori_Spinner" >
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="NormalText">
        <item name="android:textColor">@color/gray</item>
    </style>
    <style name="Tema_tint">
        <item name="drawableTint">@color/gray</item>
    </style>

    <style name="MyAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonPositive</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonNegative</item>
    </style>

    <style name="AlertDialogButtonPositive" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AlertDialogButtonNegative" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>